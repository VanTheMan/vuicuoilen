<li>
	<strong><%= post.user.email %></strong>
	<div class="content">
		<%= link_to post.content, post_path(post) %> 
	</div>
	<div class="action">
		<span class="comment">
			<%= link_to "Comment("+ post.comments.count.to_s + ")", "#" %>
		</span>
		<span class="vote">
			<%= link_to "VCL" , "#" %>
			<%= link_to "Chem gio" , "#" %>
		</span>
		<span class="favourite">
			<%= link_to "Favourite", "#" %>
		</span>
	</div>
	<small class="timestamp">
		Posted <%= time_ago_in_words(post.created_at) %> ago.
	</small>
	<%= render 'comments/form', post: post %>
</li>